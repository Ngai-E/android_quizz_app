<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/vetLinearLayout"
    android:padding="15dp"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="12dp">
        <TextView
            style="@style/wrapMatchContent"
            android:text="@string/health_quiz"
            android:textSize="25sp"
            android:gravity="center_vertical"
            android:textAllCaps="true"
            />
        <Button
            style="@style/wrapMatchContent"
            android:text="@string/reset"
            android:textAllCaps="true"
            android:id="@+id/reset"
            android:textSize="25sp"
            android:onClick="reset"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <EditText
        style="@style/matchWrapContent"
        android:hint="@string/name"
        android:padding="12dp"
        android:id="@+id/name" />
    <ScrollView
        style="@style/matchMatchWidthHeight">

        <!--question one -->
        <LinearLayout
            style="@style/vetLinearLayout">
            <LinearLayout
                style="@style/vetLinearLayout">
                <ImageView
                    style="@style/quizImage"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@drawable/quizz_1" />
                <TextView
                    style="@style/wrapWrapContent"
                    android:text="@string/question_1"
                    android:textSize="20sp"/>
                <LinearLayout
                    style="@style/wrapWrapContent"
                    android:orientation="vertical">
                    <CheckBox
                        android:id="@+id/_1a"
                        style="@style/answerCheckbox"
                        android:text="@string/mushroom"/>
                    <CheckBox
                        android:id="@+id/_1b"
                        style="@style/answerCheckbox"
                        android:text="@string/tofu"/>
                    <CheckBox
                        android:id="@+id/_1c"
                        style="@style/answerCheckbox"
                        android:text="@string/caviar"/>
                    <CheckBox
                        android:id="@+id/_1d"
                        style="@style/answerCheckbox"
                        android:text="@string/kale"/>
                </LinearLayout>

                <TextView
                    style="@style/wrapWrapContent"
                    android:text="@string/question_2"
                    android:textSize="20sp" />
            </LinearLayout>

            <!--question two-->
            <LinearLayout
                style="@style/vetLinearLayout">
                <ImageView
                    style="@style/quizImage"
                    android:src="@drawable/quizz_2"
                    />

                <RadioGroup
                    style="@style/wrapWrapContent"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/_2a"
                        style="@style/answerCheckbox"
                        android:text="@string/laughter"/>
                    <RadioButton
                        android:id="@+id/_2b"
                        style="@style/answerCheckbox"
                        android:text="@string/naps"/>
                    <RadioButton
                        android:id="@+id/_2c"
                        style="@style/answerCheckbox"
                        android:text="@string/reading"/>
                    <RadioButton
                        android:id="@+id/_2d"
                        style="@style/answerCheckbox"
                        android:text="@string/singing"/>
                </RadioGroup>
            </LinearLayout>

            <!--question three-->
            <LinearLayout
                style="@style/vetLinearLayout">
                <ImageView
                    style="@style/quizImage"
                    android:src="@drawable/quizz_3"
                    />
                <TextView
                    style="@style/wrapWrapContent"
                    android:text="@string/question_3"
                    android:textSize="20sp"/>
                <RadioGroup
                    style="@style/wrapWrapContent"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/_3a"
                        style="@style/answerCheckbox"
                        android:text="@string/nose"/>
                    <RadioButton
                        android:id="@+id/_3b"
                        style="@style/answerCheckbox"
                        android:text="@string/tongue"/>
                    <RadioButton
                        android:id="@+id/_3c"
                        style="@style/answerCheckbox"
                        android:text="@string/elbow"/>
                    <RadioButton
                        android:id="@+id/_3d"
                        style="@style/answerCheckbox"
                        android:text="@string/toe"/>
                </RadioGroup>
            </LinearLayout>

            <!--question four-->
            <LinearLayout
                style="@style/vetLinearLayout">
                <ImageView
                    style="@style/quizImage"
                    android:src="@drawable/quizz_4"
                    />
                <TextView
                    style="@style/wrapWrapContent"
                    android:text="@string/question_4"
                    android:textSize="20sp"/>
                <RadioGroup
                    style="@style/horLinearLayout">
                    <RadioButton
                        android:id="@+id/_4a"
                        style="@style/wrapWrapContent"
                        android:text="@string/str_true"/>
                    <RadioButton
                        android:id="@+id/_4b"
                        style="@style/wrapWrapContent"
                        android:text="@string/str_false"/>
                </RadioGroup>
            </LinearLayout>

            <!--question five-->
            <LinearLayout
                style="@style/vetLinearLayout">
                <ImageView
                    style="@style/quizImage"
                    android:src="@drawable/quizz_5"
                    />
                <TextView
                    style="@style/wrapWrapContent"
                    android:text="@string/question_5"
                    android:textSize="20sp"/>
                <RadioGroup
                    style="@style/wrapWrapContent"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/_5a"
                        style="@style/answerCheckbox"
                        android:text="@string/frontal"/>
                    <RadioButton
                        android:id="@+id/_5b"
                        style="@style/answerCheckbox"
                        android:text="@string/parietal"/>
                    <RadioButton
                        android:id="@+id/_5c"
                        style="@style/answerCheckbox"
                        android:text="@string/temporal"/>
                    <RadioButton
                        android:id="@+id/_5d"
                        style="@style/answerCheckbox"
                        android:text="@string/occipital"/>
                </RadioGroup>
            </LinearLayout>
            <!--question six-->
            <LinearLayout
                style="@style/vetLinearLayout">
                <TextView
                    android:text="Question 1"
                    style="@style/wrapWrapContent"/>
                <ImageView
                    style="@style/quizImage"
                    android:src="@drawable/quizz_6"
                    />
                <TextView
                    style="@style/wrapWrapContent"
                    android:text="@string/question_6"
                    android:textSize="20sp"/>
                <RadioGroup
                    style="@style/wrapWrapContent"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/_6a"
                        style="@style/answerCheckbox"
                        android:text="@string/improves_stamina"/>
                    <RadioButton
                        android:id="@+id/_6b"
                        style="@style/answerCheckbox"
                        android:text="@string/boosts_immunity"/>
                    <RadioButton
                        android:id="@+id/_6c"
                        style="@style/answerCheckbox"
                        android:text="@string/eases_migrane"/>
                    <RadioButton
                        android:id="@+id/_6d"
                        style="@style/answerCheckbox"
                        android:text="@string/sleeps_better"/>
                </RadioGroup>
            </LinearLayout>
            <Button
               style="@style/wrapMatchContent"
                android:text="@string/submit"
                android:onClick="submit"/>
            <TextView
                style="@style/matchWrapContent"
                android:text="@string/credits"
                android:autoLink="web"
                android:linksClickable="true"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>